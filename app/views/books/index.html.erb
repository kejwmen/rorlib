<h1>Listing books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Isbn</th>
    <th>Year</th>
    <th>Author</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.description %></td>
    <td><%= book.isbn %></td>
    <td><%= book.year %></td>
    <td>
    <% book.authors.each do |author| %>
    <a><%= author.name %></a>
    <% end %>
    </td>
    <td>
    <% book.categories.each do |category| %>
    <a><%= category.name %></a>
    <% end %>
    </td>
    <td><%= link_to 'Show', book, :class=>"btn" %></td>
    <td><%= link_to 'Edit', edit_book_path(book), :class=>"btn"  %></td>
    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn"  %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Book', new_book_path, :class=>"btn"  %>
